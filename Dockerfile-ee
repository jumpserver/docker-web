ARG VERSION=dev
FROM jumpserver/web-static:20240724_053058 AS static
FROM jumpserver/web:${VERSION}-ce

ARG DEPENDENCIES="                    \
        curl                          \
        vim"

RUN set -ex \
    && apt-get update \
    && apt-get install -y --no-install-recommends ${DEPENDENCIES}

COPY --from=static /tmp/opt/* /opt
